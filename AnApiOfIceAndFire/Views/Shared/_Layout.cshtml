<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "Index", "About", new { area = "" }, null)</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Documentation", "Index", "Documentation", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="jumbotron text-center">
        <h1>An Api Of Ice And Fire</h1>
        <p class="lead">All the data from the universe of Ice And Fire you've ever wanted</p>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <span class="pull-left">
                <a href="https://github.com/joakimskoog">&copy; @DateTime.Now.Year - Joakim Skoog</a>
            </span>
            <span class="pull-right">
                <iframe src="https://ghbtns.com/github-btn.html?user=joakimskoog&type=follow&count=true" frameborder="0" scrolling="0" width="170px" height="20px"></iframe>
                <iframe src="https://ghbtns.com/github-btn.html?user=joakimskoog&repo=AnApiOfIceAndFire&type=star&count=true" frameborder="0" scrolling="0" width="170px" height="20px"></iframe>
            </span>
        </footer>
    </div>
    <div class="container body-context pull-right">

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
